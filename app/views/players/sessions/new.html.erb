<%= render 'layouts/header' %>
<div class = "login">
    <div class = "log-in-container">
        <div class = "sign-in-container">
            <div class = "sign-in">
                <h2>Sign in</h2>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class = "styled-field-placeholder">
                    <%= f.email_field :email, placeholder: "Email", class: "styled-field", autofocus: true %>
                </div>
                <div class = "styled-field-placeholder">
                    <%= f.password_field :password, placeholder: "Password", class: "styled-field", autocomplete: "off" %>
                </div>

                <div class = "submit-field">
                    <% if devise_mapping.rememberable? -%>
                    <div class = "remember-placeholder">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                    <% end -%>
                    <div class = "login-placeholder">
                        <%= f.submit "Log in", class: "button" %>
                    </div>
                    <% end %>
                </div>
                <%= render "players/shared/links" %>
            </div>
        </div>
        <div class = "sign-up-container">
            <div class = "sign-up">
                <h2>Sign up</h2>
                <div class = "description">
                    Don't have an account? Set one up to start training with incident scenarios.
                </div>
                <div class = "sign-up-button">
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Sign up", new_registration_path(resource_name), class: "button" %>
                    <% end -%>
                </div>
            </div>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>