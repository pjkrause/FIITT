<%= render 'layouts/header' %>
<div class = "register">
    <%= devise_error_messages! %>
    <div class = "register-container">
        <div class = "register-sign-in-container">
            <div class = "register-sign-in">
                <h2>Sign in</h2>
                <div class = "description">
                    Already have an account? Log in to start training with our incident scenarios.
                </div>
                <div class = "register-sign-in-button">
                    <%= render "players/shared/links" %>
                </div>
            </div>
        </div>
        <div class = "register-sign-up-container">
            <div class = "register-sign-up">
                <h2>Sign up</h2>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                <div class = "styled-field-placeholder">
                    <%= f.email_field :email, placeholder: "Email", class: "styled-field", autofocus: true %>
                </div>

                <div class = "styled-field-placeholder">
                    <%= f.password_field :password, placeholder: "Password", class: "styled-field", autocomplete: "off" %>
                </div>

                <div class = "styled-field-placeholder">
                    <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "styled-field", autocomplete: "off" %>
                </div>
                <div class = "submit-field">
                    <div class = "sign-up-placeholder">
                        <%= f.submit "Sign up", class: "button" %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>