<article id="game_summary">
  <section class="left_element">
    <h1>Summary of your run</h1>
    <ul>
      <li>You completed the scenario in <%= @status.day_no %> days</li>
      <li>External Communication: <%= @status.external_communication %></li>
      <li>Internal Communication: <%= @status.internal_communication %></li>
      <li>Media Perception: <%= @status.media_perception %></li>
      <li>Public Perception: <%= @status.public_perception %></li>
    </ul>
     
    <p>
      <h2>SCENARIO STATUS</h2>
      <%= @step.status_message %>
    </p>
  </section>
  <section class="left_element">
    <h1>ACTION BOX</h1>
      <h2>Game Over!</h2>
      <p><%= link_to "Generate Report (PDF)", end_game_path(@step, format: "pdf") %></p>
  </section>

  

  <nav>
    <ul>
      <li><%= link_to "Go back to the Scenarios", games_path %></li>
      <li><%= link_to "Review Your Personal Page", player_path %></li>
    </ul>
  </nav>

</article>

