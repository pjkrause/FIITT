<%= render 'layouts/header' %>
<%= render 'layouts/login' %>

<article>
  <p id="notice"><%= notice %></p>
  <% @games.each do |game| %>
    <section>
      <h1><%= game.title %></h1>
      <p>
        <%= game.description %>
      </p>
      <p>
        <% if player_signed_in? %>
          <%= button_to "Start the Scenario", '/start/' + game.first_step.to_s, method: :get %>
        <% else %>
          Log in to start a scenario
        <% end %>
      </p>
    </section>
  <% end %>
  <nav class="basic-navigation">
    <ul>
      <li><%= link_to "Home Page", root_path %></li>
      <li><%= link_to "Your Personal Page", player_path %></li>
    </ul>
  </nav>
</article>
