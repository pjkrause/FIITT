<%= render 'layouts/header' %>
<article id='player_details'>
  
  <section>
  <% if current_player %>
  Welcome <%= current_player.email %>

    <% if @statuses == [] %>
      <p>
        You have no previous games.
      </p>      
    <% else %>
      <ul>
        You have played the following games
        <% @statuses.each do |status| %>
          <li><%= Game.find(status.game_id).title %>, with trace <%= status.trace %></li>
        <% end %>
      </ul>
    <% end %>
  <% else %>
    Log in to see your player details
  <% end %>
  </section>

<nav>
  <%= link_to "Go back to the Scenarios", games_path %>
</nav>
  
    
  
</article>